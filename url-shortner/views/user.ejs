<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container { max-width: 800px; margin-top: 2rem; }
        .url-form { margin-bottom: 2rem; }
        .short-url { word-break: break-all; }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">URL Shortener</h1>
        
        <!-- URL Input Form -->
        <div class="url-form">
            <form id="urlForm" class="row g-3">
                <div class="col-md-8">
                    <input type="url" class="form-control" id="longUrl" placeholder="Enter your URL here" required>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Generate Short URL</button>
                </div>
            </form>
        </div>

        <!-- Display Shortened URLs -->
        <h2 class="mb-3">Your Shortened URLs</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Short URL</th>
                        <th>Original URL</th>
                        <th>Total Clicks</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach(url => { %>
                        <tr>
                            <td class="short-url">
                                <a href="/<%= url.shortid %>" target="_blank">
                                    <%= `http://localhost:3000/${url.shortid}` %>
                                </a>
                            </td>
                            <td class="short-url"><%= url.redirecturl %></td>
                            <td><%= url.visithistory ? url.visithistory.length : 0 %></td>
                            <td><%= new Date(url.createdAt).toLocaleString() %></td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="showAnalytics('<%= url.shortid %>')">
                                    Analytics
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Handle form submission
        document.getElementById('urlForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const longUrl = document.getElementById('longUrl').value;
            
            try {
                const response = await fetch('/url', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ url: longUrl })
                });
                
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Error creating short URL');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error creating short URL');
            }
        });

        // Show analytics
        async function showAnalytics(shortid) {
            try {
                const response = await fetch(`/analytics/${shortid}`);
                const data = await response.json();
                alert(`Total Clicks: ${data.totalClicks}`);
            } catch (error) {
                console.error('Error:', error);
                alert('Error fetching analytics');
            }
        }
    </script>
</body>
</html> 